@page 
@using MercadUM.Areas.Feiras.Pages.Manage;
@model AdicionarFeiraModel
@{
    ViewData["Title"] = "Adicionar Feira";
}


<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="/Feiras" method="post">
            <h2>Crie uma nova feira.</h2>
            <hr />

            <div class="form-floating">
                <input asp-for="Input.Nome" class="form-control" aria-required="true" />
                <label asp-for="Input.Nome"></label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Descricao" class="form-control" />
                <label asp-for="Input.Descricao"></label>
                <span asp-validation-for="Input.Descricao" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Data_inicio" class="form-control" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Data_fim" class="form-control"  aria-required="true" />
                <label asp-for="Input.Data_fim"></label>
                <span asp-validation-for="Input.Data_fim" class="text-danger"></span>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Criar feira</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
