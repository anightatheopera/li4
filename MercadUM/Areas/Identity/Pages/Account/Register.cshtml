@page
@model RegisterModel
@{
    ViewData["Title"] = "Registo";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crie uma nova conta.</h2>
            <hr />

            <div class="form-floating">
                <input asp-for="Input.Nome" class="form-control" aria-required="true"/>
                <label asp-for="Input.Nome"></label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Morada" class="form-control" aria-required="true" />
                <label asp-for="Input.Morada"></label>
                <span asp-validation-for="Input.Morada" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.DataNascimento" class="form-control" aria-required="true" />
                <label asp-for="Input.DataNascimento"></label>
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Pagamento" class="form-control" aria-required="true" />
                <label asp-for="Input.Pagamento"></label>
                <span asp-validation-for="Input.Pagamento" class="text-danger"></span>
            </div>
            <div>
                <label for="Input.TipoDeConta">Selecione o seu tipo de conta:</label>
                <select name="Input.TipoDeConta" id="TipoDeConta">
                        <option value="1">Organizador</option>
                        <option value="2">Vendedor</option>
                        <option value="3">Cliente</option>
                </select>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registe-se</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
